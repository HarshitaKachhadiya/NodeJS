<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    <style>
        #error {
            margin: auto;
            width: 30%;
            /* border: 1px solid #4771fa;
            padding: 0.5rem; */
            border-radius: 3px;
            background: #b9c9ff;
            text-align: center;
            border-color: red;
            background: rgb(255, 176, 176);
            color: red;
         }
    </style>

</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <div id="error"></div>
        <form class="login-form" action="/new-password" method="POST" onsubmit="return validation()">
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" autocomplete="off">
            </div>
            <input type="hidden" name="userId" value="<%= userId %>">
            <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit">Update Password</button>
        </form>
    </main>
    <script type="text/javascript">
       function validation() {
           var password = document.getElementById('password').value;

           var error = document.getElementById('error');
           var text;

           error.style.padding = "0.5rem";
           error.style.border = "1px solid red";

           if(password.length < 5) {
               text = "Please Enter a Password with only numbers and text and at least 5 Characters.";
               error.innerHTML = text;
               return false;
           }
       }
    </script>
<%- include('../includes/end.ejs') %>