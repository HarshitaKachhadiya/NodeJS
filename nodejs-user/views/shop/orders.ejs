<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>No Orders Found!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <ul class="orders__products">
                                <% order.products.forEach(p => { %>
                                    <li class="orders__products-item">
                                        <img src="http://localhost:8000/<%= p.product.imageUrl %>" alt="<%= p.product.title %>">
                                        <h1><%= p.product.title %></h1>
                                        <h2>Quantity: <%= p.quantity %></h2>
                                <% }); %>
                            </ul>
                            <div class="centered">
                                <a class="btn" href="/orders/<%= order._id %>">Invoice</a>
                           </div>
                            <!-- <form action="delete-order" method="POST">
                                <input type="hidden" value="<%= order._id %>" name="orderId">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn" type="submit">Delete</button>
                            </form> -->
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/footer.ejs') %>
        <%- include('../includes/end.ejs') %>