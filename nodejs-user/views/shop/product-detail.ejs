<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="centered">
            <h1><%= product.title %></h1>
            <hr>
            <br>
            <div class="image">
                <img src="http://localhost:8000/<%= product.imageUrl %>" alt="<%= product.title %>">
            </div>
            <h5 style="padding-top: 10px;">Size: <%= product.size %></h5>
            <h5>Color: <%= product.color %></h5>
            <!-- <h2><i class="fa fa-rupee" style="font-size:20px"></i><%= product.price %></h2> -->
            <h2><span style="color: #e20c77;">-<%= product.discount %>% </span><i class="fa fa-rupee" style="font-size:20px; padding-left: 10px;"></i><%= product.price %></h2>
            <h4 style="text-decoration: line-through; color: #858796;"><i class="fa fa-rupee" style="font-size:14px"></i><%= product.actprice %></h4>
            <p><%= product.description %></p>
            <% if (isAuthenticated) { %>
                <%- include('../includes/add-to-cart.ejs', {product: product}) %>
            <% } %>
        </main>
        <%- include('../includes/footer.ejs') %>
        <%- include('../includes/end.ejs') %>