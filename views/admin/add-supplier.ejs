<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>

<style>
  .user-message {
    margin: auto;
    width: 90%;
    border: 1px solid #4771fa;
    padding: 0.5rem;
    border-radius: 3px;
    background: #b9c9ff;
    text-align: center;
  }
  
  .user-message--error {
    border-color: red;
    background: rgb(255, 176, 176);
    color: red;
    margin-bottom: 16px;
  }

  .invalid {
      border-color: red;
  }
</style>

<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add Delivery Boy</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <% if (errorMessage) { %>
                  <div class="user-message user-message--error"><%= errorMessage %></div>
                <% } %>
                <form action="/add-deliveryboy" method="POST" enctype="multipart/form-data" novalidate>
                    <div class="form-group">
                        <label for="fname">Name</label>
                        <input class="<%= validationErrors.find(e => e.param === 'fname') ? 'form-control invalid' : 'form-control' %>" type="text" id="fname" name="fname" value="<% if (hasError) { %><%= supplier.fname %><% } %>"/>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="<%= validationErrors.find(e => e.param === 'email') ? 'form-control invalid' : 'form-control' %>" type="email" id="email" name="email" value="<% if (hasError) { %><%= supplier.email %><% } %>"/>
                    </div>
                    <div class="form-group">
                        <label for="phoneno">Phoneno</label>
                        <input class="<%= validationErrors.find(e => e.param === 'phoneno') ? 'form-control invalid' : 'form-control' %>" type="number" id="phoneno" name="phoneno" value="<% if (hasError) { %><%= supplier.phoneno %><% } %>"/>
                    </div>
                    <div class="form-group">
                      <label for="title">Product Title</label>
                      <input class="<%= validationErrors.find(e => e.param === 'title') ? 'form-control invalid' : 'form-control' %>" type="text" id="title" name="title" value="<% if (hasError) { %><%= supplier.title %><% } %>"/>
                    </div>
                  
                    <div class="form-group">
                      <label for="price">Product Price</label>
                      <input class="<%= validationErrors.find(e => e.param === 'price') ? 'form-control invalid' : 'form-control' %>" type="number" name="price" id="price" step="0.01" value="<% if (hasError) { %><%= supplier.price %><% } %>"/>
                    </div>
                  
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-primary">Add Delivery Boy</button>
                  </form>
            </div>
            </div>
            </div>
            </div>
        </div>
    </div>

</div>

</div>
<%- include('../includes/footer.ejs') %>
<%- include('../includes/end.ejs') %>