                        <div class="table-responsive text-nowrap">
                        <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phoneno</th>
                                <th>Question</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        
                    <% if (conts.length > 0) { %> 
                        <% for (let contact of conts) { %>
                        <tr>
                            <td><%= contact._id %></td>
                            <td><%= contact.fname %></td>
                            <td><%= contact.email %></td>
                            <td><%= contact.phoneno %></td>
                            <td><%= contact.question %></td>
                            <td><%= ((contact.date).getDate() + '-' + ((contact.date).getMonth()+1) + '-' + (contact.date).getFullYear()); %></td>
                            <td>
                                <form action="/delete-contact" method="POST">
                                    <input type="hidden" value="<%= contact._id %>" name="contactId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button type="submit" class="action"><i class="fa fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <td colspan="7">No Contact Found!</td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
